{
  "name": "omp-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@patternfly/react-core": "^3.129.3",
    "@patternfly/react-icons": "^3.14.30",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "axios": "^0.19.1",
    "lodash.find": "^4.6.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "slugify": "^1.3.6",
    "yaml": "^1.7.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:ci": "react-scripts build && mkdir -p package-contents && cp -vr build Dockerfile package-contents", 
    "test": "react-scripts test",
    "test:ci": "npm test -- --watchAll=false",
    "package": "zip -r build.zip build",
    "publish": "curl -vvv -u admin:admin123 --upload-file build.zip http://${NEXUS_SERVICE_HOST}:${NEXUS_SERVICE_PORT}/repository/zip/com/redhat/omp-frontend/${JOB_NAME}.${BUILD_NUMBER}/package-contents.zip",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2"
  }
}
