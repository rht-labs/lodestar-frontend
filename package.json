    "@types/react-dom": "^16.9.11",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-router-hash-link": "^1.2.1",
    "@types/scheduler": "^0.16.1",
    "@types/semver": "^7.3.4",
    "@welldone-software/why-did-you-render": "^4.3.2",
    "ace-builds": "^1.4.12",
    "axios": "^0.21.1",
    "date-fns": "^2.19.0",
    "date-fns-tz": "^1.1.3",
    "faker": "^4.1.0",
    "mockdate": "^3.0.2",
    "prettier": "^1.19.1",
    "query-string": "^6.14.1",
    "react": "^16.14.0",
    "react-ace": "^9.3.0",
    "react-dom": "^16.14.0",
    "react-ga": "^3.3.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-router-hash-link": "^2.4.0",
    "react-scripts": "^4.0.3",
    "scheduler": "^0.19.1",
    "semver": "^7.3.4",
    "slugify": "^1.4.7",
    "transliteration": "^2.2.0",
    "uuid": "^8.3.2",
    "uuidv4": "^6.2.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:ci": "react-scripts build && mkdir -p package-contents && cp -vr build Dockerfile package-contents",
    "test": "TZ=America/New_York react-scripts test",
    "test:ci": "npm test -- --watchAll=false --coverage --env=jsdom --testResultsProcessor jest-sonar-reporter",
    "e2e": "npx cypress open",
    "package": "zip -r package-contents.zip package-contents",
    "publish": "curl -vvv -u admin:admin123 --upload-file package-contents.zip http://${NEXUS_SERVICE_HOST}:${NEXUS_SERVICE_PORT}/repository/zip/com/redhat/lodestar-frontend/${JOB_NAME}.${BUILD_NUMBER}/package-contents.zip",
    "eject": "react-scripts eject",
    "check": "gts check src/*.tsx src/*.ts",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "fix": "gts fix src/*.ts src/*.tsx",
    "prettify": "npx prettier --config prettier.config.js src/**/*.ts src/**/*.tsx --write",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check src/*.ts src/*.tsx",
    "unimported": "npx unimported"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^3.7.0",
    "@types/node": "^14.14.33",
    "cypress": "^4.12.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "gts": "^3.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "typescript": "^4.2.3"
  }
}
